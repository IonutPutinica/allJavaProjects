
public class RedCar implements Runnable
{
   private Bridge lock;

   public RedCar(Bridge lock)
   {
      this.lock = lock;
   }

   @Override
   public void run()
   {
     while(true)
     {
        beforeReading(1000, 2000);
        lock.acquireRead();
        reading(500, 1000);
        lock.releaseRead();
        afterReading(5000, 10000);  
     }

   }

}
